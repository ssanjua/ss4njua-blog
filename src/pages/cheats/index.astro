---
import CheatsLayout from "@layouts/CheatsLayout.astro";
import getPageNumbers from "@utils/getPageNumbers";
import { SITE } from "src/config";
import getSortedPosts from "@utils/getSortedPosts";
import type { Frontmatter } from "src/types";

const cheats = await Astro.glob<Frontmatter>("../../contents/cheatsheets/*.md");
const sortedPosts = getSortedPosts(cheats);

const totalPages = getPageNumbers(cheats.length);
const paginatedPosts = sortedPosts.slice(0, SITE.postPerPage);
---

<CheatsLayout
  posts={paginatedPosts}
  pageNum={1}
  totalPages={totalPages.length}
/>
